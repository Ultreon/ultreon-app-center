{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Ultreon App Center",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "scope": [
          "$TEMP/**/*",
          "$TEMP/*",
          "$TEMP",
          "$APPLOCALDATA/temp/**/*",
          "$APPLOCALDATA/temp/*",
          "$APPLOCALDATA/temp"
        ],
        "all": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "removeFile": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Game",
      "copyright": "All Rights Reserved",
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      },
      "publisher": "Ultreon Team",
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.github.ultreon.AppLauncher",
      "longDescription": "Ultreon App Center",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "license": "LICENSE.txt"
      },
      "resources": [],
      "shortDescription": "Ultreon App Center",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "license": "LICENSE.txt",
          "installMode": "currentUser",
          "compression": "lzma"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "dialog": true,
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 640,
        "resizable": true,
        "title": "Ultreon AppCenter",
        "width": 1024,
        "transparent": true,
        "decorations": false,
        "acceptFirstMouse": true,
        "minWidth": 800,
        "minHeight": 450,
        "theme": "Dark",
        "center": true,
        "alwaysOnTop": false
      }
    ]
  }
}
